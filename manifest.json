{
  "manifest_version": 2,

  "name": "Tree Bookmarks",
  "description":
    "Easily add bookmarks to any category. Includes spotlight-like search with mouse/keyboard support. Default key: cmd+b (win:ctrl+b)",
  "version": "1.5.0",
  "author": "Szymon Pilkowski, Dmitry Galakhov",
  "homepage_url": "https://github.com/galakhov/chrome-better-bookmark",
  "default_locale": "en",

  "background": {
    "page": "init.html",
    "persistent": false
  },

  "icons": {
    "16": "bookmark-icon-trees.png",
    "48": "bookmark-icon-trees.png",
    "128": "bookmark-icon-trees.png"
  },

  "browser_action": {
    "default_icon": {
      "19": "bookmark-icon-trees.png",
      "38": "bookmark-icon-trees.png"
    },
    "default_title": "Tree Bookmarks",
    "default_popup": "background.html"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+B",
        "windows": "Ctrl+B",
        "mac": "Command+B",
        "chromeos": "Ctrl+B",
        "linux": "Ctrl+B"
      }
    }
  },

  "permissions": ["bookmarks", "tabs", "contextMenus"]
}
